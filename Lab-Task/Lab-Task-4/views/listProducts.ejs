<!DOCTYPE html>
<html>
<head><title>Product List</title></head>
<body>
  <h1>Product List</h1>
  <a href="/admin/products/add">Add New Product</a>
  <table border="1" cellpadding="5">
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.title %></td>
        <td>RS.<%= p.price.toLocaleString() %></td>
        <td>
          <a href="/admin/products/edit/<%= p._id %>">Edit</a> |
          <a href="/admin/products/delete/<%= p._id %>" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>

