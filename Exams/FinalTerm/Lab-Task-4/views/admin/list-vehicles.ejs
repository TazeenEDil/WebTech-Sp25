<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>All Vehicles</h2>
  <a href="/admin/vehicles/add" class="btn btn-primary mb-3">Add Vehicle</a>
  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Type</th>
        <th>Price</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% vehicles.forEach(vehicle => { %>
        <tr>
          <td><%= vehicle.name %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.type %></td>
          <td>Rs. <%= vehicle.price %></td>
          <td>
            <% if (vehicle.image) { %>
              <img src="/uploads/vehicles/<%= vehicle.image %>" width="80" />
            <% } else { %>
              No Image
            <% } %>
          </td>
          <td>
            <a href="/admin/vehicles/edit/<%= vehicle._id %>" class="btn btn-warning btn-sm">Edit</a>
            <form action="/admin/vehicles/delete/<%= vehicle._id %>" method="POST" style="display:inline-block;">
              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
